<?xml version="1.0"?>
<root>
    <modifierdef>HAPPY_SCROLL</modifierdef>
    <item>
        <name>D_DIVINED modifier: ** require ** D_DIVINED activated</name>

        <item>
            <name>Mouse Movement</name>
            <appendix>【 H => Move left 】</appendix>
            <appendix>【 J => Move down 】</appendix>
            <appendix>【 K => Move up 】</appendix>
            <appendix>【 L => Move right 】</appendix>
            <appendix>【 Y => Move to first character on line 】</appendix>
            <appendix>【 U => Move forward to next word 】</appendix>
            <appendix>【 I => Move backward to next word 】</appendix>
            <appendix>【 O => Move to end of line 】</appendix>

            <identifier vk_config="true">notsave.D_DIVINED_FOR_MOUSE</identifier>

            <autogen>__BlockUntilKeyUp__ KeyCode::D</autogen>

            <!-- scroll -->
            <block>
                <modifier_only>ModifierFlag::HAPPY_SCROLL</modifier_only>
                <autogen>__KeyToKey__ KeyCode::H, KeyCode::VK_MOUSEKEY_SCROLL_LEFT</autogen>
                <autogen>__KeyToKey__ KeyCode::J, KeyCode::VK_MOUSEKEY_SCROLL_DOWN</autogen>
                <autogen>__KeyToKey__ KeyCode::K, KeyCode::VK_MOUSEKEY_SCROLL_UP</autogen>
                <autogen>__KeyToKey__ KeyCode::L, KeyCode::VK_MOUSEKEY_SCROLL_RIGHT</autogen>
            </block>

            <!-- mouse move -->
            <autogen>__KeyToKey__ KeyCode::H, KeyCode::VK_MOUSEKEY_LEFT</autogen>
            <autogen>__KeyToKey__ KeyCode::J, KeyCode::VK_MOUSEKEY_DOWN</autogen>
            <autogen>__KeyToKey__ KeyCode::K, KeyCode::VK_MOUSEKEY_UP</autogen>
            <autogen>__KeyToKey__ KeyCode::L, KeyCode::VK_MOUSEKEY_RIGHT</autogen>

            <!-- hyper -->
            <autogen>__KeyToKey__ KeyCode::S, KeyCode::VK_MODIFIER_HAPPY_SCROLL</autogen>
            <autogen>__KeyToKey__ KeyCode::F, KeyCode::VK_MOUSEKEY_HIGHSPEED</autogen>

            <!-- click -->
            <autogen>__KeyToKey__ KeyCode::V, PointingButton::LEFT</autogen>
            <autogen>__KeyToKey__ KeyCode::B, PointingButton::MIDDLE</autogen>
            <autogen>__KeyToKey__ KeyCode::N, PointingButton::RIGHT</autogen>

            <!-- warp cursor position -->
            <autogen>__KeyToKey__ KeyCode::I, KeyCode::VK_OPEN_URL_SHELL_warp_mouse_cursor_position_front_window_center</autogen>
        </item>

    </item>
</root>