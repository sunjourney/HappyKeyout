<?xml version="1.0"?>
<root>

    <modifierdef>HAPPY_PAGE</modifierdef>
    <modifierdef>HAPPY_JUMP</modifierdef>

    <item>
        <name>F_FANCY modifier: ** require ** F_FANCY activated</name>

        <item>
            <name>Cursor Movement</name>
            <appendix>【 H => Move left 】</appendix>
            <appendix>【 J => Move down 】</appendix>
            <appendix>【 K => Move up 】</appendix>
            <appendix>【 L => Move right 】</appendix>
            <appendix>【 H + D => Move to first character on line 】</appendix>
            <appendix>【 J + D => Move forward to next word 】</appendix>
            <appendix>【 K + D => Move backward to next word 】</appendix>
            <appendix>【 L + D => Move to end of line 】</appendix>
            <appendix>【 H + S => Home 】</appendix>
            <appendix>【 J + S => Page Down 】</appendix>
            <appendix>【 K + S => Page UP 】</appendix>
            <appendix>【 L + S => End 】</appendix>
            
            <identifier vk_config="true">notsave.F_FANCY_FOR_CURSOR</identifier>

            <autogen>__BlockUntilKeyUp__ KeyCode::F</autogen>

            <block>
                <modifier_only>ModifierFlag::HAPPY_JUMP</modifier_only>

                <block>
                    <modifier_only>ModifierFlag::HAPPY_PAGE</modifier_only>
                    <autogen>__KeyToKey__ KeyCode::H, KeyCode::CURSOR_LEFT, VK_COMMAND | VK_SHIFT</autogen>
                    <autogen>__KeyToKey__ KeyCode::J, KeyCode::CURSOR_RIGHT, VK_OPTION | VK_SHIFT</autogen>
                    <autogen>__KeyToKey__ KeyCode::K, KeyCode::CURSOR_LEFT, VK_OPTION | VK_SHIFT</autogen>
                    <autogen>__KeyToKey__ KeyCode::L, KeyCode::CURSOR_RIGHT, VK_COMMAND | VK_SHIFT</autogen>
                </block>

                <autogen>__KeyToKey__ KeyCode::H, KeyCode::CURSOR_LEFT, VK_COMMAND</autogen>
                <autogen>__KeyToKey__ KeyCode::J, KeyCode::CURSOR_RIGHT, VK_OPTION</autogen>
                <autogen>__KeyToKey__ KeyCode::K, KeyCode::CURSOR_LEFT, VK_OPTION</autogen>
                <autogen>__KeyToKey__ KeyCode::L, KeyCode::CURSOR_RIGHT, VK_COMMAND</autogen>
            </block>

            <block>
                <modifier_only>ModifierFlag::HAPPY_PAGE</modifier_only>
                <autogen>__KeyToKey__ KeyCode::H, KeyCode::HOME</autogen>
                <autogen>__KeyToKey__ KeyCode::J, KeyCode::PAGEDOWN</autogen>
                <autogen>__KeyToKey__ KeyCode::K, KeyCode::PAGEUP</autogen>
                <autogen>__KeyToKey__ KeyCode::L, KeyCode::END</autogen>
            </block>


            <!-- curser move -->
            <autogen>__KeyToKey__ KeyCode::H, KeyCode::CURSOR_LEFT</autogen>
            <autogen>__KeyToKey__ KeyCode::J, KeyCode::CURSOR_DOWN</autogen>
            <autogen>__KeyToKey__ KeyCode::K, KeyCode::CURSOR_UP</autogen>
            <autogen>__KeyToKey__ KeyCode::L, KeyCode::CURSOR_RIGHT</autogen>

            <!-- hyper -->
            <autogen>__KeyToKey__ KeyCode::S, KeyCode::VK_MODIFIER_HAPPY_PAGE</autogen>
            <autogen>__KeyToKey__ KeyCode::D, KeyCode::VK_MODIFIER_HAPPY_JUMP</autogen>

        </item>

    </item>
</root>